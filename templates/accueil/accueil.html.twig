{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <hr class="pt-1 mt-5">
        <h3>La liste de nos voitures</h3>
        <hr class="pt-1 mt-3">
        {# {{ dump(voitures) }} #}
        {% for voiture in voitures %}
        <div class="col-12 col-lg-4 mt-5">
            <div class="card" style="width: 18rem;">
                <small><img src="{{ asset('images/upload/' ~ voiture.image) }}" class="card-img-top" alt="{{ voiture.nom|raw }}"></small>
                <div class="card-body">
                    <h5 class="card-title">{{ voiture.nom|raw }}</h5>
                    <p class="card-text">{{ voiture.description|raw }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ voiture.marque|raw }}</li>
                    <li class="list-group-item">{{ voiture.couleur|raw }}</li>
                    <li class="list-group-item">{{ voiture.prix|number_format(2, ',', '') }}&ensp;â‚¬</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="btn bg-primary text-white">Ajouter au panier</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}